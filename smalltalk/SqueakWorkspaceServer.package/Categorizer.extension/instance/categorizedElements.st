*SqueakWorkspaceServer-accessing
categorizedElements
	"Copied from Categorizer>>#sesqSortedCategorizedElements (SemanticSqueak)."

	| elements nonGrataCategoryPrefixes |
	elements := (1 to: categoryStops size)
		collect: [:categoryIndex |
			| firstIndex lastIndex |
			firstIndex := self firstIndexOfCategoryNumber: categoryIndex.
			lastIndex := self lastIndexOfCategoryNumber: categoryIndex.
			(categoryArray at: categoryIndex) ->
				(elementArray copyFrom: firstIndex to: lastIndex) sorted]
		as: OrderedDictionary.
	
	nonGrataCategoryPrefixes := #('*etoys' '*60deprecated' '*61deprecated' '*autogenerated').
	elements := (elements associations reject: [:assoc | assoc key asLowercase beginsWithAnyOf: nonGrataCategoryPrefixes]) as: elements species.
	
	^ elements
		withKeysSorted:
			[:category | (category beginsWith: '*') asBit] ascending
				, [:category | category asLowercase] ascending